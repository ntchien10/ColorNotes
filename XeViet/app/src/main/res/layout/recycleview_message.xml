<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imgSanPham_chat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_TenNguoiBan_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên người bán"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgSanPham_chat"/>
    <TextView
        android:id="@+id/tv_tinnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên người bán"
        app:layout_constraintTop_toBottomOf="@id/tv_TenNguoiBan_chat"
        app:layout_constraintLeft_toLeftOf="@id/tv_TenNguoiBan_chat"/>
    <TextView
        android:id="@+id/tv_ngaynhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày nhắn"
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/tv_TenNguoiBan_chat"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>