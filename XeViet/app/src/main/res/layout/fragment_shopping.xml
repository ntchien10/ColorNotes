<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shopping.Shopping">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_giohang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="50dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <CheckBox
            android:id="@+id/chb_tatca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tất cả"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/chb_tatca"
            app:layout_constraintTop_toTopOf="@id/chb_tatca" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: "
            android:textSize="16sp"
            app:layout_constraintRight_toLeftOf="@id/tv_tongtien"
            app:layout_constraintTop_toTopOf="@id/tv_tongtien" />

        <TextView
            android:id="@+id/tv_tongtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:text="đ0"
            android:textSize="18sp"
            app:layout_constraintRight_toLeftOf="@id/btnMuaHang"
            app:layout_constraintTop_toTopOf="@id/btnMuaHang" />

        <Button
            android:id="@+id/btnMuaHang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Mua hàng"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>